# Disk usage
[disk]
command=$SCRIPT_DIR/disk/disk
label=ROOT 
DIR=/
interval=30

[battery]
command=$SCRIPT_DIR/battery/battery
label=⚡
interval=30

[cpu_usage]
command=$SCRIPT_DIR/cpu_usage/cpu_usage
label=CPU
interval=10
min_width=CPU0.00%
separator=false

[temperature]
command=$SCRIPT_DIR/temperature/temperature
interval=10

# Network
[iface]
command=$SCRIPT_DIR/iface/iface
label=IP: 
IFACE=wlp58s0
color=#00FF00
interval=10
separator=false
[iface]
command=$SCRIPT_DIR/iface/iface
label=WG: 
IFACE=wg0
color=#00FF00
interval=10
separator=true

# Date Time
#
[time]
command=date '+%Y-%m-%d %H:%M:%S'
interval=5
